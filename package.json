{
  "name": "rubik-pure-scaffold",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build-cdn": "cross-env NODE_ENV=production CDN_ENV=true rubik build",
    "build-no-hash": "cross-env NODE_ENV=production NO_HASH_ENV=true rubik build",
    "build": "cross-env NODE_ENV=production rubik build",
    "start": "rubik serve",
    "new-page": "rubik new-page",
    "rubik": "rubik",
    "preinstall": "rubik check-yarn",
    "lint": "eslint --fix src/**/*.js"
  },
  "keywords": [
    "webpack",
    "multiple",
    "pages"
  ],
  "author": "Fancy <fancyboynet@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "cross-env": "^5.2.0",
    "eslint": "^6.0.1",
    "husky": "^3.0.0",
    "lint-staged": "^9.1.0"
  },
  "dependencies": {
    "axios": "^0.18.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module"
    },
    "extends": [
      "standard"
    ]
  },
  "eslintIgnore": [
    "src/static/**/*.js"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-merge": "rubik check-package",
      "post-checkout": "rubik check-package"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
